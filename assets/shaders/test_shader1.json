{
    "type": "Shader",
    "name": "3D",
    "lang": "GLSL",
    "vs": {
        "input": [
            { "type": "vec4f", "name": "position" },
            { "type": "vec4f", "name": "normal" },
            { "type": "vec4f", "name": "texcoord" },
            { "type": "vec4f", "name": "tangent" },
            { "type": "vec4f", "name": "bitangent" },
            { "type": "vec4i", "name": "blending" }
        ],
        "output": [
            { "type": "vec4f", "name": "position" },
            { "type": "vec4f", "name": "normal" },
            { "type": "vec4f", "name": "texcoord" },
            { "type": "vec4f", "name": "tangent" },
            { "type": "vec4f", "name": "bitangent" },
            { "type": "vec4i", "name": "blending" }
        ],
        "data": [
            {
                "type": "UBO",
                "name": "scene_state_uniforms",
                "data": [
                    { "type": "mat4f", "name": "u_proj" },
                    { "type": "mat4f", "name": "u_view" }
                ]
            },
            {
                "type": "UBO",
                "name": "render_pass_uniforms",
                "data": [
                    { "type": "mat4f", "name": "u_placeholder" }
                ]
            },
            {
                "type": "UBO",
                "name": "transforms_uniforms",
                "data": [
                    { "type": "mat4f", "name": "u_model" }
                ]
            },
            {
                "type": "UBO",
                "name": "material_uniforms",
                "data": [
                    { "type": "vec4f", "name": "u_ambient" },
                    { "type": "vec4f", "name": "u_diffuse" },
                    { "type": "vec4f", "name": "u_specular" },
                    { "type": "float", "name": "u_shininess" }
                ]
            }
        ],
        "main": [
            "output.position = input.position;",
            "output.normal = input.normal;",
            "output.texcoord = input.texcoord;",
            "output.tangent = input.tangent;",
            "output.bitangent = input.bitangent;",
            "output.blending = input.blending;",
            "gl_Position = u_proj * u_view * u_model * output.position;"
        ]
    },
    "ps": {
        "input": [
            { "type": "vec4f", "name": "position" },
            { "type": "vec4f", "name": "normal" },
            { "type": "vec4f", "name": "texcoord" },
            { "type": "vec4f", "name": "tangent" },
            { "type": "vec4f", "name": "bitangent" },
            { "type": "vec4i", "name": "blending" }
        ],
        "output": [
            { "type": "vec4f", "name": "color" }
        ],
        "data": [
            { "type": "sampler2D", "name": "u_texture_dm" },
            { "type": "sampler2D", "name": "u_texture_sm" }
        ],
        "main": [
            "output.color = texture(u_texture_dm, input.texcoord.xy);"
        ]
    }
}