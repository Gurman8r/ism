{
    "type": "Shader",
    "name": "3D/Test0",
    "lang": "GLSL",
    "mode": 1,
    "vertex":
    {
        "input":
        {
            "Position": { "bind": 0, "type": "Vec4" },
            "Normal": { "bind": 1, "type": "Vec4" },
            "UV": { "bind": 2, "type": "Vec4" },
            "Tangent": { "bind": 3, "type": "Vec4" },
            "Bitangent": { "bind": 4, "type": "Vec4" }
        },
        "output":
        {
            "Pixel_Position": { "bind": 0, "type": "Vec4" },
            "Pixel_Normal": { "bind": 1, "type": "Vec4" },
            "Pixel_UV": { "bind": 2, "type": "Vec4" },
            "Pixel_Tangent": { "bind": 3, "type": "Vec4" },
            "Pixel_Bitangent": { "bind": 4, "type": "Vec4" }
        },
        "data":
        {
            "Scene_State_Uniforms":
            {
                "type": "UBO",
                "bind": 0,
                "data":
                {
                    "Projection": { "bind": 0, "type": "Mat4" },
                    "View": { "bind": 1, "type": "Mat4" }
                }
            },
            "Render_Pass_Uniforms":
            {
                "type": "UBO",
                "bind": 1,
                "data":
                {
                    "Placeholder": { "bind": 0, "type": "Mat4" }
                }
            },
            "Transforms_Uniforms":
            {
                "type": "UBO",
                "bind": 2,
                "data":
                {
                    "Transform": { "bind": 0, "type": "Mat4" }
                }
            },
            "Material_Uniforms":
            {
                "type": "UBO",
                "bind": 3,
                "data":
                {
                    "Ambient": { "bind": 0, "type": "Vec4", "data": [ 1, 1, 1, 1 ] },
                    "Diffuse": { "bind": 1, "type": "Vec4", "data": [ 1, 1, 1, 1 ] },
                    "Specular": { "bind": 2, "type": "Vec4", "data": [ 1, 1, 1, 1 ] },
                    "Shininess": { "bind": 3, "type": "Float", "data": 32 }
                }
            }
        },
        "main":
        [
            "Pixel_Position = Position",
            "Pixel_Normal = Normal",
            "Pixel_UV = UV",
            "Pixel_Tangent = Tangent",
            "Pixel_Bitangent = Bitangent",
            "gl_Position = Projection * View * Transform * Pixel_Position"
        ]
    },
    "pixel":
    {
        "input":
        {
            "Pixel_Position": { "bind": 0, "type": "Vec4" },
            "Pixel_Normal": { "bind": 1, "type": "Vec4" },
            "Pixel_UV": { "bind": 2, "type": "Vec4" },
            "Pixel_Tangent": { "bind": 3, "type": "Vec4" },
            "Pixel_Bitangent": { "bind": 4, "type": "Vec4" }
        },
        "output":
        {
            "Out_Color": { "bind": 0, "type": "Vec4" }
        },
        "data":
        {
            "Diffuse_Map": { "bind": 0, "type": "Texture2D" },
            "Specular_Map": { "bind": 1, "type": "Texture2D" }
        },
        "main":
        [
            "Out_Color = texture(Diffuse_Map, Pixel_UV.xy)"
        ]
    }
}