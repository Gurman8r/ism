{
    "type": "Shader",
    "name": "3D/Test1",
    "lang": "glsl",
    "vertex":
    {
        "in":
        {
            "Attr_Position" : { "vec4": 0 },
            "Attr_Normal"   : { "vec4": 1 },
            "Attr_Texcoord" : { "vec4": 2 },
            "Attr_Tangent"  : { "vec4": 3 },
            "Attr_Bitangent": { "vec4": 4 }
        },
        "out":
        {
            "Frag_Position" : { "vec4": 0 },
            "Frag_Normal"   : { "vec4": 1 },
            "Frag_Texcoord" : { "vec4": 2 },
            "Frag_Tangent"  : { "vec4": 3 },
            "Frag_Bitangent": { "vec4": 4 }
        },
        "data":
        {
            "Scene_State_Uniforms":
            {
                "ubo": 0,
                "data":
                {
                    "CameraProj": { "mat4": 0 },
                    "CameraView": { "mat4": 1 }
                }
            },
            "Render_Pass_Uniforms":
            {
                "ubo": 1,
                "data":
                {
                    "Placeholder": { "mat4": 0 }
                }
            },
            "Transforms_Uniforms":
            {
                "ubo": 2,
                "data":
                {
                    "Transform": { "mat4": 0 }
                }
            },
            "Material_Uniforms":
            {
                "ubo": 3,
                "data":
                {
                    "Ambient": { "vec4": 0 },
                    "Diffuse": { "vec4": 1 },
                    "Specular": { "vec4": 2 },
                    "Shininess": { "float": 3 }
                }
            }
        },
        "main":
        [
            "Frag_Position = Attr_Position;",
            "Frag_Normal = Attr_Normal;",
            "Frag_Texcoord = Attr_Texcoord;",
            "Frag_Tangent = Attr_Tangent;",
            "Frag_Bitangent = Attr_Bitangent;",
            "gl_Position = (CameraProj * CameraView * Transform) * Attr_Position;"
        ]
    },
    "fragment":
    {
        "in":
        {
            "Frag_Position" : { "vec4": 0 },
            "Frag_Normal"   : { "vec4": 1 },
            "Frag_Texcoord" : { "vec4": 2 },
            "Frag_Tangent"  : { "vec4": 3 },
            "Frag_Bitangent": { "vec4": 4 }
        },
        "out":
        {
            "Out_Color": { "vec4": 0 }
        },
        "data":
        {
            "Diffuse_Map": { "type": "sampler2D", "bind": 0 },
            "Specular_Map": { "type": "sampler2D", "bind": 1 }
        },
        "main":
        [
            "Out_Color = texture(Diffuse_Map, Frag_Texcoord.xy);"
        ]
    }
}