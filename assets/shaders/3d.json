{
    "type": "Shader",
    "name": "3D/Default",
    "lang": "GLSL",
    "vs": {
        "input": [
            { "type": "vec4f", "name": "attr_position" },
            { "type": "vec4f", "name": "attr_normal" },
            { "type": "vec4f", "name": "attr_texcoord" },
            { "type": "vec4f", "name": "attr_tangent" },
            { "type": "vec4f", "name": "attr_bitangent" },
            { "type": "vec4i", "name": "attr_blending" }
        ],
        "output": [
            { "type": "vec4f", "name": "pass_position" },
            { "type": "vec4f", "name": "pass_normal" },
            { "type": "vec4f", "name": "pass_texcoord" },
            { "type": "vec4f", "name": "pass_tangent" },
            { "type": "vec4f", "name": "pass_bitangent" },
            { "type": "vec4i", "name": "pass_blending" }
        ],
        "data": [
            {
                "type": "UBO",
                "name": "scene_state_uniforms",
                "data": [
                    { "type": "mat4f", "name": "u_proj" },
                    { "type": "mat4f", "name": "u_view" }
                ]
            },
            {
                "type": "UBO",
                "name": "render_pass_uniforms",
                "data": [
                    { "type": "mat4f", "name": "u_placeholder" }
                ]
            },
            {
                "type": "UBO",
                "name": "transforms_uniforms",
                "data": [
                    { "type": "mat4f", "name": "u_model" }
                ]
            },
            {
                "type": "UBO",
                "name": "material_uniforms",
                "data": [
                    { "type": "vec4f", "name": "u_ambient" },
                    { "type": "vec4f", "name": "u_diffuse" },
                    { "type": "vec4f", "name": "u_specular" },
                    { "type": "float", "name": "u_shininess" }
                ]
            }
        ],
        "main": [
            "pass_position = attr_position;",
            "pass_normal = attr_normal;",
            "pass_texcoord = attr_texcoord;",
            "pass_tangent = attr_tangent;",
            "pass_bitangent = attr_bitangent;",
            "pass_blending = attr_blending;",
            "gl_Position = u_proj * u_view * u_model * pass_position;"
        ]
    },
    "ps": {
        "input": [
            { "type": "vec4f", "name": "pass_position" },
            { "type": "vec4f", "name": "pass_normal" },
            { "type": "vec4f", "name": "pass_texcoord" },
            { "type": "vec4f", "name": "pass_tangent" },
            { "type": "vec4f", "name": "pass_bitangent" },
            { "type": "vec4i", "name": "pass_blending" }
        ],
        "output": [
            { "type": "vec4f", "name": "pass_color" }
        ],
        "data": [
            { "type": "sampler2D", "name": "u_texture_dm" },
            { "type": "sampler2D", "name": "u_texture_sm" }
        ],
        "main": [
            "pass_color = texture(u_texture_dm, pass_texcoord.xy);"
        ]
    }
}