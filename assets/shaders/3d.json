{
    "vertex": {
        "text": [
            "#version 460 core",
            "#define SCENE 0",
            "#define RENDER_PASS 1",
            "#define TRANSFORMS 2",
            "#define MATERIAL 3",
            "layout (location = 0) in vec3 a_position;",
            "layout (location = 1) in vec3 a_normal;",
            "layout (location = 2) in vec2 a_texcoord;",
            "layout (location = 3) in vec3 a_tangent;",
            "layout (location = 4) in vec3 a_bitangent;",
            "out Vertex {",
            "   vec3 position;",
            "   vec3 normal;",
            "   vec2 texcoord;",
            "   vec3 tangent;",
            "   vec3 bitangent;",
            "} vertex;",
            "layout (std140, binding = SCENE) uniform Scene {",
            "   mat4 u_proj;",
            "   mat4 u_view;",
            "};",
            "layout (std140, binding = TRANSFORMS) uniform Transforms {",
            "   mat4 u_model;",
            "};",
            "void main() {",
            "    vertex.position = a_position;",
            "    vertex.normal = a_normal;",
            "    vertex.texcoord = a_texcoord;",
            "    vertex.tangent = a_tangent;",
            "    vertex.bitangent = a_bitangent;",
            "    gl_Position = (u_proj * u_view * u_model) * vec4(vertex.position, 1.0);",
            "}"
        ]
    },
    "pixel": {
        "text": [
            "#version 460 core",
            "#define SCENE 0",
            "#define RENDER_PASS 1",
            "#define TRANSFORMS 2",
            "#define MATERIAL 3",
            "out vec4 gl_Color;",
            "in Vertex {",
            "   vec3 position;",
            "   vec3 normal;",
            "   vec2 texcoord;",
            "   vec3 tangent;",
            "   vec3 bitangent;",
            "} vertex;",
            "//layout (std140, binding = MATERIAL) uniform Material {",
            "//   vec3 ambient;",
            "//   vec3 diffuse;",
            "//   vec3 specular;",
            "//   float shininess;",
            "//}",
            "layout (location = 0) uniform sampler2D u_main_texture;",
            "void main() {",
            "   gl_Color = texture(u_main_texture, vertex.texcoord);",
            "}"
        ]
    }
}