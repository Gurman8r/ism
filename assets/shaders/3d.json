{
    "type": "Shader",
    "name": "3D/Test1",
    "lang": "glsl",
    "vertex":
    {
        "in":
        {
            "Attr_Position" : { "type": "vec4", "bind": 0 },
            "Attr_Normal"   : { "type": "vec4", "bind": 1 },
            "Attr_Texcoord" : { "type": "vec4", "bind": 2 },
            "Attr_Tangent"  : { "type": "vec4", "bind": 3 },
            "Attr_Bitangent": { "type": "vec4", "bind": 4 }
        },
        "out":
        {
            "Pixel_Position" : { "type": "vec4", "bind": 0 },
            "Pixel_Normal"   : { "type": "vec4", "bind": 1 },
            "Pixel_Texcoord" : { "type": "vec4", "bind": 2 },
            "Pixel_Tangent"  : { "type": "vec4", "bind": 3 },
            "Pixel_Bitangent": { "type": "vec4", "bind": 4 }
        },
        "data":
        {
            "Scene_State_Uniforms":
            {
                "type": "ubo",
                "bind": 0,
                "data":
                {
                    "CameraProj": { "type": "mat4", "bind": 0 },
                    "CameraView": { "type": "mat4", "bind": 1 }
                }
            },
            "Render_Pass_Uniforms":
            {
                "type": "ubo",
                "bind": 1,
                "data":
                {
                    "Placeholder": { "type": "mat4", "bind": 0 }
                }
            },
            "Transforms_Uniforms":
            {
                "type": "ubo",
                "bind": 2,
                "data":
                {
                    "Transform": { "type": "mat4", "bind": 0 }
                }
            },
            "Material_Uniforms":
            {
                "type": "ubo",
                "bind": 3,
                "data":
                {
                    "Ambient": { "type": "vec4", "bind": 0 },
                    "Diffuse": { "type": "vec4", "bind": 1 },
                    "Specular": { "type": "vec4", "bind": 2 },
                    "Shininess": { "type": "float", "bind": 3 }
                }
            }
        },
        "main":
        [
            "Pixel_Position = Attr_Position;",
            "Pixel_Normal = Attr_Normal;",
            "Pixel_Texcoord = Attr_Texcoord;",
            "Pixel_Tangent = Attr_Tangent;",
            "Pixel_Bitangent = Attr_Bitangent;",
            "gl_Position = (CameraProj * CameraView * Transform) * Attr_Position;"
        ]
    },
    "pixel":
    {
        "in":
        {
            "Pixel_Position" : { "type": "vec4", "bind": 0 },
            "Pixel_Normal"   : { "type": "vec4", "bind": 1 },
            "Pixel_Texcoord" : { "type": "vec4", "bind": 2 },
            "Pixel_Tangent"  : { "type": "vec4", "bind": 3 },
            "Pixel_Bitangent": { "type": "vec4", "bind": 4 }
        },
        "out":
        {
            "Out_Color": { "type": "vec4", "bind": 0 }
        },
        "data":
        {
            "Diffuse_Map": { "type": "sampler2D", "bind": 0 },
            "Specular_Map": { "type": "sampler2D", "bind": 1 }
        },
        "main":
        [
            "Out_Color = texture(Diffuse_Map, Pixel_Texcoord.xy);"
        ]
    }
}