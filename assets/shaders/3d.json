{
    "defines":
    [
        "SCENE_STATE_UNIFORM_BUFFER=0",
        "RENDER_PASS_UNIFORM_BUFFER=1",
        "TRANSFORMS_UNIFORM_BUFFER=2",
        "MATERIAL_UNIFORM_BUFFER=3"
    ],
    "vertex":
    {
        "in":
        {
            "Attr_Position" : { "vec4": "POSITION"  },
            "Attr_Normal"   : { "vec4": "NORMAL"    },
            "Attr_Texcoord" : { "vec4": "TEXCOORD"  },
            "Attr_Tangent"  : { "vec4": "TANGENT"   },
            "Attr_Bitangent": { "vec4": "BITANGENT" }
        },
        "out":
        {
            "Frag_Position" : { "vec4": "POSITION"  },
            "Frag_Normal"   : { "vec4": "NORMAL"    },
            "Frag_Texcoord" : { "vec4": "TEXCOORD"  },
            "Frag_Tangent"  : { "vec4": "TANGENT"   },
            "Frag_Bitangent": { "vec4": "BITANGENT" }
        },
        "data":
        {
            "Scene_State_Uniforms":
            {
                "ubo": 0,
                "data":
                {
                    "CameraProj": { "mat4": 0 },
                    "CameraView": { "mat4": 1 }
                }
            },
            "Render_Pass_Uniforms":
            {
                "ubo": 1,
                "data":
                {
                    "Placeholder": { "mat4": 0 }
                }
            },
            "Transforms_Uniforms":
            {
                "ubo": 2,
                "data":
                {
                    "Transform": { "mat4": 0 }
                }
            },
            "Material_Uniforms":
            {
                "ubo": 3,
                "data":
                {
                    "Ambient": { "vec4": 0 },
                    "Diffuse": { "vec4": 1 },
                    "Specular": { "vec4": 2 },
                    "Shininess": { "float": 3 }
                }
            }
        },
        "main":
        [
            "Frag_Position = (CameraProj * CameraView * Transform) * Attr_Position;",
            "Frag_Normal = Attr_Normal;",
            "Frag_Texcoord = Attr_Texcoord;",
            "Frag_Tangent = Attr_Tangent;",
            "Frag_Bitangent = Attr_Bitangent;",
            "gl_Position = Frag_Position;"
        ]
    },
    "fragment":
    {
        "in":
        {
            "Frag_Position" : { "vec4": "POSITION"  },
            "Frag_Normal"   : { "vec4": "NORMAL"    },
            "Frag_Texcoord" : { "vec4": "TEXCOORD"  },
            "Frag_Tangent"  : { "vec4": "TANGENT"   },
            "Frag_Bitangent": { "vec4": "BITANGENT" }
        },
        "out":
        {
            "Out_Color": { "vec4": 0 }
        },
        "data":
        {
            "Diffuse_Map": { "sampler2D": 0 },
            "Specular_Map": { "sampler2D": 1 }
        },
        "main":
        [
            "Out_Color = texture(Diffuse_Map, Frag_Texcoord.xy);"
        ]
    }
}