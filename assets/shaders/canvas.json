{
    "type": "Shader",
    "name": "2D/Canvas",
    "lang": "GLSL",
    "mode": 0,
    "vertex":
    {
        "input": [{ "type": "vec2", "name": "Attr_Position" }, { "type": "vec2", "name": "Texcoord" }, { "type": "vec4", "name": "Color" }],
        "output": [{ "type": "vec2", "name": "Pixel_Texcoord" }, { "type": "vec4", "name": "Pixel_Color" }],
        "data": [{ "type": "ubo", "name": "VS", "data": [{ "type": "mat4", "name": "Projection" }] }],
        "main": [
            "Pixel_Texcoord = Texcoord",
            "Pixel_Color = Color",
            "gl_Position = Projection * vec4(Attr_Position.xy, 0, 1)"
        ]
    },
    "pixel":
    {
        "input": [{ "type": "vec2", "name": "Pixel_Texcoord" }, { "type": "vec4", "name": "Pixel_Color" }],
        "output": [{ "type": "vec4", "name": "Out_Color" }],
        "data": [{ "type": "sampler2D", "name": "MainTexture" }],
        "main": [
            "Out_Color = Pixel_Color * texture(MainTexture, Pixel_Texcoord.st)"
        ]
    }
}