{   
    "vertex": {
        "text": [
            "#version 460 core",
            "layout (location = 0) in vec3 a_position;",
            "layout (location = 1) in vec2 a_texcoord;",
            "out _Vertex {",
            "   vec3 position;",
            "   vec2 texcoord;",
            "} vertex;",
            "void main() {",
            "    vertex.position = a_position;",
            "    vertex.texcoord = a_texcoord;",
            "    gl_Position = vec4(vertex.position, 1.0);",
            "}"
        ]
    },
    "pixel": {
        "text": [
            "#version 460 core",
            "in _Vertex {",
            "   vec3 position;",
            "   vec2 texcoord;",
            "} vertex;",
            "out vec4 gl_Color;",
            "layout (location = 0) uniform sampler2D u_main_texture;",
            "void main() {",
            "   gl_Color = texture(u_main_texture, vertex.texcoord);",
            "}"
        ]
    }
}