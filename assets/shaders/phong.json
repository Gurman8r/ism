{
    "type": "Shader",
    "name": "Phong",
    "lang": "GLSL",
    "vertex": {
        "input": [
            { "type": "Vec4", "name": "Position" },
            { "type": "Vec4", "name": "Normal" },
            { "type": "Vec4", "name": "UV" },
            { "type": "Vec4", "name": "Tangent" },
            { "type": "Vec4", "name": "Bitangent" }
        ],
        "output": [
            { "type": "Vec4", "name": "Pixel_Position" },
            { "type": "Vec4", "name": "Pixel_Normal" },
            { "type": "Vec4", "name": "Pixel_UV" },
            { "type": "Vec4", "name": "Pixel_Tangent" },
            { "type": "Vec4", "name": "Pixel_Bitangent" }
        ],
        "data": [
            {
                "type": "UBO",
                "name": "Scene_State_Uniforms",
                "data": [
                    { "type": "Mat4", "name": "Projection" },
                    { "type": "Mat4", "name": "View" }
                ]
            },
            {
                "type": "UBO",
                "name": "Render_Pass_Uniforms",
                "data": [
                    { "type": "Mat4", "name": "Placeholder" }
                ]
            },
            {
                "type": "UBO",
                "name": "Transforms_Uniforms",
                "data": [
                    { "type": "Mat4", "name": "Transform" }
                ]
            },
            {
                "type": "UBO",
                "name": "Material_Uniforms",
                "data": [
                    { "type": "Vec4", "name": "Ambient" },
                    { "type": "Vec4", "name": "Diffuse" },
                    { "type": "Vec4", "name": "Specular" },
                    { "type": "Float", "name": "Shininess" }
                ]
            }
        ],
        "main": [
            "Pixel_Position = Position",
            "Pixel_Normal = Normal",
            "Pixel_UV = UV",
            "Pixel_Tangent = Tangent",
            "Pixel_Bitangent = Bitangent",
            "gl_Position = Projection * View * Transform * Pixel_Position"
        ]
    },
    "pixel": {
        "input": [
            { "type": "Vec4", "name": "Pixel_Position" },
            { "type": "Vec4", "name": "Pixel_Normal" },
            { "type": "Vec4", "name": "Pixel_UV" },
            { "type": "Vec4", "name": "Pixel_Tangent" },
            { "type": "Vec4", "name": "Pixel_Bitangent" }
        ],
        "output": [
            { "type": "Vec4", "name": "Out_Color" }
        ],
        "data": [
            { "type": "Texture2D", "name": "Diffuse_Map" },
            { "type": "Texture2D", "name": "Specular_Map" }
        ],
        "main": [
            "Out_Color = texture(Diffuse_Map, Pixel_UV.xy)"
        ]
    }
}