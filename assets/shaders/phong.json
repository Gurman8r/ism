{
    "type": "Shader",
    "name": "Phong",
    "lang": "GLSL",
    "vertex": {
        "input": [
            { "type": "vec4", "name": "Attr_Position" },
            { "type": "vec4", "name": "Attr_Normal" },
            { "type": "vec4", "name": "Attr_Texcoord" },
            { "type": "vec4", "name": "Attr_Tangent" },
            { "type": "vec4", "name": "Attr_Bitangent" }
        ],
        "output": [
            { "type": "vec4", "name": "Pixel_Position" },
            { "type": "vec4", "name": "Pixel_Normal" },
            { "type": "vec4", "name": "Pixel_Texcoord" },
            { "type": "vec4", "name": "Pixel_Tangent" },
            { "type": "vec4", "name": "Pixel_Bitangent" }
        ],
        "data": [
            {
                "type": "ubo",
                "name": "Scene_State_Uniforms",
                "data": [
                    { "type": "mat4", "name": "Projection" },
                    { "type": "mat4", "name": "View" }
                ]
            },
            {
                "type": "ubo",
                "name": "Render_Pass_Uniforms",
                "data": [
                    { "type": "mat4", "name": "Placeholder" }
                ]
            },
            {
                "type": "ubo",
                "name": "Transforms_Uniforms",
                "data": [
                    { "type": "mat4", "name": "Transform" }
                ]
            },
            {
                "type": "ubo",
                "name": "Material_Uniforms",
                "data": [
                    { "type": "vec4", "name": "Ambient" },
                    { "type": "vec4", "name": "Diffuse" },
                    { "type": "vec4", "name": "Specular" },
                    { "type": "float", "name": "Shininess" }
                ]
            }
        ],
        "main": [
            "Pixel_Position = Attr_Position",
            "Pixel_Normal = Attr_Normal",
            "Pixel_Texcoord = Attr_Texcoord",
            "Pixel_Tangent = Attr_Tangent",
            "Pixel_Bitangent = Attr_Bitangent",
            "gl_Position = Projection * View * Transform * Pixel_Position"
        ]
    },
    "pixel": {
        "input": [
            { "type": "vec4", "name": "Pixel_Position" },
            { "type": "vec4", "name": "Pixel_Normal" },
            { "type": "vec4", "name": "Pixel_Texcoord" },
            { "type": "vec4", "name": "Pixel_Tangent" },
            { "type": "vec4", "name": "Pixel_Bitangent" }
        ],
        "output": [
            { "type": "vec4", "name": "Out_Color" }
        ],
        "data": [
            { "type": "sampler2D", "name": "Diffuse_Map" },
            { "type": "sampler2D", "name": "Specular_Map" }
        ],
        "main": [
            "Out_Color = texture(Diffuse_Map, Pixel_Texcoord.xy)"
        ]
    }
}